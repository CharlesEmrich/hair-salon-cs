@{
  Layout="Shared/_Layout.cshtml";
}

<h1>@Model.GetName()</h1>

@if(Model.GetClients().Count > 0)
{
  <ul>
    @foreach(var client in Model.GetClients())
    {
      <li>@client.GetName() | <a href="/clients/@client.GetId()/edit">Edit</a> | <a href="/clients/@client.GetId()/delete">Delete</a></li>
    }
  </ul>
} else {
  <p>No clients yet for this stylist</p>
}
